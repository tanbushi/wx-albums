.container{
  padding: 20rpx 35rpx;
}

.gallery{
  display: flex;
  flex-wrap: wrap;
  margin-right: -25rpx;
}

.box{
  width: 330rpx;
  height: 440rpx;
  overflow: hidden;
  margin: 0rpx 24rpx 50rpx 0rpx;
}

.item-img {
  display: block;
  width: 330rpx;
  height: 340rpx;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 8rpx gray;
}

.item-add {
  text-align: center;
  background: #f5f5f5;
  color: #0bb9f1;
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.item-icon {
  font-size: 140rpx;
}

.item-name {
  color: #000;
  font-size: 32rpx;
  line-height: 64rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.item-num {
  color: #747474;
  font-size: 28rpx;
  line-height: 1;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}