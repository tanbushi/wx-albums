/**index.wxss**/
.container{
  padding: 0;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 50rpx 0rpx;
  border-bottom: 1px #aaa solid;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
  animation: rotating 10s linear infinite;
}

@keyframes rotating {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

.userinfo-nickname {
  color: #aaa;
}

.text{
  padding: 50rpx 50rpx;
  color: #aaa;
}
